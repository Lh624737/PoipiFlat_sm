<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/title">

        <TextView
            style="@style/sale_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/statistics" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_sale_statis"
                    style="@style/style_tongji"
                    android:text="本日商品销售统计" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/cashier_today"
                    style="@style/style_tongji"
                    android:text="收银员本日收款报表" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/today_sale_all"
                    style="@style/style_tongji"
                    android:text="本日收款汇总表" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/today_time_statis"
                    style="@style/style_tongji"
                    android:text="本日时段销售统计" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/trade_list"
                    style="@style/style_tongji"
                    android:text="交易清单" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/manual_upload"
                    style="@style/style_tongji"
                    android:text="手动上传" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_light" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/today_sale_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>
