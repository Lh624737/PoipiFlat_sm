<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cashierselection_item_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_margin="15dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="10dp"
        android:text="Large Text"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/cashierselection_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cashierselection_item_tv_number"
        android:layout_toEndOf="@+id/cashierselection_item_tv_number"
        android:layout_toRightOf="@+id/cashierselection_item_tv_number"
        android:text="Medium Text"
        android:textColor="@color/white"
        android:textSize="22sp" />
</RelativeLayout>