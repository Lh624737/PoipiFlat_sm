<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/erp_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingdialog_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/settingdialog_title_bg">

        <TextView
            style="@style/pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="第三方ERP系统数据上传设置" />

        <TextView
            android:id="@+id/erp_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/back"
            android:textColor="@color/blue_sale"
            android:textSize="15sp" />

    </RelativeLayout>

    <include layout="@layout/view_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="第三方接口类型" />

            <Spinner
                android:id="@+id/erp_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="0.8"
                android:entries="@array/erp"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <include layout="@layout/view_line_leftmargin" />

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="服务器地址" />

            <EditText
                android:id="@+id/erp_url"
                style="@style/erp_edit"
                android:text="http://112.224.203.221:8187/sales.asmx" />
            //http://180.166.29.82:8080/TTPOS/sales.asmx
        </LinearLayout>

        <!--<include layout="@layout/view_line_leftmargin" />-->

        <!--<LinearLayout-->
        <!--style="@style/setting_layout"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center_vertical">-->

        <!--<TextView-->
        <!--style="@style/erp_text"-->
        <!--android:text="账号信息" />-->

        <!--<EditText-->
        <!--android:id="@+id/erp_account_info"-->
        <!--style="@style/erp_edit" />-->
        <!--</LinearLayout>-->

        <include layout="@layout/view_line_leftmargin" />

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="商场编号" />

            <EditText
                android:id="@+id/erp_mallid"
                style="@style/erp_edit"
                android:text="" />//5012
        </LinearLayout>

        <include layout="@layout/view_line_leftmargin" />

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="交易店铺号" />

            <EditText
                android:id="@+id/erp_storecode"
                style="@style/erp_edit"
                android:text="105032017" />
            <!--android:text="A00181"-->
        </LinearLayout>

        <include layout="@layout/view_line_leftmargin" />

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="交易货号" />

            <EditText
                android:id="@+id/erp_itemcode"
                style="@style/erp_edit"
                android:text="10503201701" />
            <!--android:text="A001811"-->
        </LinearLayout>

        <include layout="@layout/view_line_leftmargin" />

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="正式用户账号" />

            <EditText
                android:id="@+id/erp_id"
                style="@style/erp_edit"
                android:text="" />//010201
        </LinearLayout>

        <include layout="@layout/view_line_leftmargin" />

        <LinearLayout
            style="@style/setting_layout"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                style="@style/erp_text"
                android:text="正式用户密码" />

            <EditText
                android:id="@+id/erp_pwd"
                style="@style/erp_edit"
                android:text="" />//010201
        </LinearLayout>

        <include layout="@layout/view_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center">

        <Button
            android:id="@+id/erp_btn_sure"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_btn_blue"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />
</LinearLayout>