<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="NestedWeights">

            <TextView
                style="@style/pay_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/pay_details" />

            <LinearLayout
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:gravity="center"
                tools:ignore="RelativeOverlap,RtlHardcoded,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_pay_del"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/reset"
                    android:textColor="@color/grey_light"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/heng_line"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1.8">

            <TextView
                android:id="@+id/pay_detail"
                style="@style/pay_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/pay_detail2"
                style="@style/pay_detail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" />
            <TextView
                android:id="@+id/pay_detail3"
                style="@style/pay_detail"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/pay_detail4"
                style="@style/pay_detail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heng_line"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/pay_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white_light"
                    android:text="@string/collection_info" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heng_line"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pay_yingshou"
                    style="@style/pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_marginEnd="106dp"
                    android:layout_marginRight="106dp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="61dp"
                    android:layout_marginStart="61dp"
                    android:text="@string/yingshou"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="59dp"
                    android:layout_marginStart="59dp"
                    android:text="@string/shihou" />

                <TextView
                    android:id="@+id/pay_shihou"
                    style="@style/pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_marginEnd="106dp"
                    android:layout_marginRight="106dp"
                    android:text="0.0"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="59dp"
                    android:layout_marginStart="59dp"
                    android:text="@string/change" />

                <TextView
                    android:id="@+id/pay_zhaoling"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_marginEnd="106dp"
                    android:layout_marginRight="106dp"
                    android:gravity="center"
                    android:text="0.0"
                    android:textColor="@color/red"
                    android:textSize="38sp"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/shu_line"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_pay_cash"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/qingkong"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_pay_close"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/qingkong"
                android:layout_toStartOf="@+id/qingkong"
                android:hint="@string/zero"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="35sp"
                tools:ignore="RelativeOverlap" />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/heng_line"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/white_light"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1.2"
                android:background="@color/white_light"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zhenghao"
                    style="@style/text_border_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/just_right"
                    tools:ignore="NestedWeights" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_7" />

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_8" />

                    <TextView
                        style="@style/pay_money"
                        android:onClick="qiqi"
                        android:text="@string/_9" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_4" />

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_5" />

                    <TextView
                        style="@style/pay_money"
                        android:onClick="qiqi"
                        android:text="@string/_6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_1" />

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_2" />

                    <TextView
                        style="@style/pay_money"
                        android:onClick="qiqi"
                        android:text="@string/_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/dian"
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/poi" />

                    <TextView
                        style="@style/pay_money"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="qiqi"
                        android:text="@string/_0" />

                    <TextView
                        android:id="@+id/delete"
                        style="@style/pay_money"
                        android:text="@string/clear" />

                </LinearLayout>
            </LinearLayout>

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/shu_line"-->
            <!--tools:ignore="ContentDescription" />-->

            <ListView
                android:id="@+id/lv_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:divider="@null" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_pay"
            style="@style/pay_btn"
            android:layout_weight="4"
            android:text="@string/pay" />

    </LinearLayout>

</LinearLayout>