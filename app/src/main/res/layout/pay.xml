<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="79dp">
        <ImageView
            android:id="@+id/zfpt_return"
            android:layout_centerVertical="true"
            android:layout_marginLeft="47dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_button_zfpt_return"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="121dp"
            android:layout_height="39dp"
            android:text="支付平台"
            android:textColor="#ff666666"
            android:textSize="28sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/yj_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"

            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <com.pospi.pai.yunpos.util.HorizontalListView
                    android:id="@+id/pay_way_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">
                </com.pospi.pai.yunpos.util.HorizontalListView>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/yj_white3"
                android:layout_height="249dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="23dp"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_button_zfpt_yuan"/>

                    <com.pospi.util.MyTextview
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:textSize="21sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="@string/collection_info" />


                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heng_line"
                    tools:ignore="ContentDescription" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <com.pospi.util.NumTextView
                            android:id="@+id/pay_yingshou"
                            style="@style/pay_title"
                            android:textColor="#4680ff"
                            android:textSize="21sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/textView4"
                            android:layout_marginEnd="106dp"
                            android:layout_marginRight="106dp"
                            tools:ignore="RelativeOverlap" />

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/pay_title"
                            android:textSize="17sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="61dp"
                            android:layout_marginStart="61dp"
                            android:text="@string/yingshou"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView7"
                            style="@style/pay_title"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="59dp"
                            android:layout_marginStart="59dp"
                            android:text="@string/shihou" />

                        <com.pospi.util.NumTextView
                            android:id="@+id/pay_shihou"
                            style="@style/pay_title"
                            android:textColor="#4680ff"
                            android:textSize="21sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/textView7"
                            android:layout_marginEnd="106dp"
                            android:layout_marginRight="106dp"
                            android:text="0.00"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"

                        android:layout_weight="1">

                        <TextView
                            android:textSize="17sp"
                            android:textColor="#666666"
                            android:id="@+id/textView8"
                            style="@style/pay_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="59dp"
                            android:layout_marginStart="59dp"
                            android:textStyle="bold"
                            android:text="@string/change" />

                        <com.pospi.util.NumTextView
                            android:id="@+id/pay_zhaoling"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/textView8"
                            android:layout_marginEnd="106dp"
                            android:layout_marginRight="106dp"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="#4680ff"
                            android:textSize="21sp"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:background="@drawable/yj_white3"
                android:orientation="vertical"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="NestedWeights">
                    <ImageView
                        android:layout_marginLeft="23dp"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_button_zfpt_yuan"/>

                    <com.pospi.util.MyTextview
                        android:layout_marginLeft="50dp"
                        android:textColor="#333333"
                        android:textSize="21sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="center_vertical"
                        android:text="@string/pay_details" />

                    <LinearLayout
                        android:id="@+id/reset"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        tools:ignore="RelativeOverlap,RtlHardcoded,UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/icon_button_zfpt_delete"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heng_line"
                    tools:ignore="ContentDescription" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.8">
                    <ListView
                        android:layout_marginLeft="60dp"
                        android:id="@+id/pay_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>

                </RelativeLayout>

            </LinearLayout>







        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="0.5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="21dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:text="实收"
                    android:textColor="#ff333333"
                    android:textSize="32sp"
                    />



                <com.pospi.util.NumTextView
                    android:id="@+id/show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="67sp"
                    tools:ignore="RelativeOverlap" />


            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="80dp">
                <com.pospi.util.MyTextview
                    android:id="@+id/zhenghao"
                    android:layout_width="73dp"
                    android:layout_height="40dp"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text="正好"
                    android:background="@drawable/yj_gray_press"
                    android:textColor="#575252"
                    />
                <com.pospi.util.MyTextview
                    android:id="@+id/tv_50"
                    android:layout_marginLeft="10dp"
                    android:layout_width="73dp"
                    android:layout_height="40dp"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text="50"
                    android:background="@drawable/yj_gray_press"
                    android:textColor="#575252"
                    />
                <com.pospi.util.MyTextview
                    android:id="@+id/tv_65"
                    android:layout_marginLeft="10dp"
                    android:layout_width="73dp"
                    android:layout_height="40dp"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text="65"
                    android:background="@drawable/yj_gray_press"
                    android:textColor="#575252"
                    />
                <com.pospi.util.MyTextview
                    android:id="@+id/tv_100"
                    android:layout_marginLeft="10dp"
                    android:layout_width="73dp"
                    android:layout_height="40dp"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text="100"
                    android:background="@drawable/yj_gray_press"
                    android:textColor="#575252"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/pay_money"
                            android:onClick="qiqi"
                            android:text="@string/_7" />

                        <TextView
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/_8" />

                        <TextView
                            style="@style/pay_money"
                            android:onClick="qiqi"
                            android:text="@string/_9" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/_4" />

                        <TextView
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/_5" />

                        <TextView
                            style="@style/pay_money"
                            android:onClick="qiqi"
                            android:text="@string/_6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/_1" />

                        <TextView
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/_2" />

                        <TextView
                            style="@style/pay_money"
                            android:onClick="qiqi"
                            android:text="@string/_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/dian"
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/poi" />

                        <TextView
                            style="@style/pay_money"

                            android:onClick="qiqi"
                            android:text="@string/_0" />

                        <TextView
                            android:id="@+id/delete"
                            style="@style/pay_money"
                            android:text="@string/clear" />

                    </LinearLayout>
                </LinearLayout>

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/shu_line"-->
                <!--tools:ignore="ContentDescription" />-->


            </LinearLayout>
            <Button
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_pay"
                style="@style/sale_small_text"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="@drawable/bt_press_select"
                android:text="收银" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>