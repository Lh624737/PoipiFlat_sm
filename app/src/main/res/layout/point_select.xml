<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="点选收款"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:padding="5dp"
            android:src="@drawable/icon_cd" />

        <TextView
            android:id="@+id/text_upload_hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_textview"
            android:layout_marginRight="100dp"
            android:drawableLeft="@drawable/icon_ts"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="有未上传订单"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.214"
            android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/griditem"
                tl:tl_divider_color="@color/gray_transparent"
                tl:tl_divider_width="1dp"
                tl:tl_indicator_style="BLOCK"
                tl:tl_indicator_color="@color/blue"
                tl:tl_tab_padding="25dp"
                tl:tl_indicator_corner_radius="6dp"
                tl:tl_textSelectColor="@color/white"
                tl:tl_textUnselectColor="@color/grey_light"
                tl:tl_textsize="20sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/griditem">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_syy" />

                    <TextView
                        android:id="@+id/cashier_name"
                        style="@style/pay_title_text"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="管理员" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/vip_icon"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sale_main_hy" />

                    <TextView
                        android:id="@+id/vip_name"
                        style="@style/pay_title_text"
                        android:layout_weight="1"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:id="@+id/ll_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_table" />

                    <TextView
                        android:id="@+id/table_name"
                        style="@style/pay_title_text"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/pay_title_text"
                        android:gravity="center|right"
                        android:text="总计:" />

                    <TextView
                        android:id="@+id/tv_num"
                        style="@style/pay_red_text"
                        android:gravity="center"
                        android:text="0"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        style="@style/pay_title_text"
                        android:gravity="center|left"
                        android:text="件" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/pay_title_text"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="折扣:" />

                    <TextView
                        android:id="@+id/tv_discount"
                        style="@style/pay_red_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="0.00"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/pay_title_text"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="应收:" />

                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/pay_red_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="0.00"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_light2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include layout="@layout/view_line" />

            <LinearLayout
                android:id="@+id/ll_good_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/pay_title_text"
                    android:gravity="center_vertical"
                    android:text="商品名称" />

                <TextView
                    style="@style/pay_title_text"
                    android:gravity="center"
                    android:text="数量/单价" />

                <TextView
                    style="@style/pay_title_text"
                    android:layout_weight="0.8"
                    android:gravity="center|right"
                    android:text="折扣/金额" />
            </LinearLayout>

            <com.pospi.view.swipemenulistview.SwipeMenuListView
                android:id="@+id/goods_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@color/gray_light2"
                android:dividerHeight="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/more_payway"
                    style="@style/sale_small_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_theme"
                    android:text="更多" />

                <Button
                    android:id="@+id/pay"
                    style="@style/sale_small_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pay_bg"
                    android:text="付款" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>