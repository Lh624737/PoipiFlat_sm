<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_edit_table_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="修改餐桌"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_edit_table_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="修改"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/view_line" />

    <LinearLayout
        style="@style/pop_add_layout"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_blue_stroke">

        <TextView
            android:id="@+id/tv_edit_square_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="方形餐桌"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_edit_circle_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="圆形餐桌"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_square_table"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/pop_add_layout"
            android:gravity="center_vertical">

            <TextView
                style="@style/pop_add_text"
                android:text="餐桌名:" />

            <EditText
                android:id="@+id/et_edit_square_table_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/shape_gray_stroke" />
        </LinearLayout>

        <LinearLayout
            style="@style/pop_add_layout"
            android:gravity="center_vertical">

            <TextView
                style="@style/pop_add_text"
                android:text="餐桌宽度:" />

            <TextView
                android:id="@+id/tv_edit_square_table_width"
                style="@style/pop_add_text"
                android:layout_weight="3"
                android:text="1" />

            <LinearLayout style="@style/pop_add_layout_right">

                <TextView
                    android:id="@+id/tv_edit_square_table_width_jian"
                    style="@style/pop_text_jian"
                    android:clickable="false" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue" />

                <TextView
                    android:id="@+id/tv_edit_square_table_width_jia"
                    style="@style/pop_text_jia" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/pop_add_layout"
            android:gravity="center_vertical">

            <TextView
                style="@style/pop_add_text"
                android:text="餐桌高度:" />

            <TextView
                android:id="@+id/tv_edit_square_table_height"
                style="@style/pop_add_text"
                android:layout_weight="3"
                android:text="1" />

            <LinearLayout style="@style/pop_add_layout_right">

                <TextView
                    android:id="@+id/tv_edit_square_table_height_jian"
                    style="@style/pop_text_jian"
                    android:clickable="false" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue" />

                <TextView
                    android:id="@+id/tv_edit_square_table_height_jia"
                    style="@style/pop_text_jia" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_circle_table"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/pop_add_layout"
            android:gravity="center_vertical">

            <TextView
                style="@style/pop_add_text"
                android:text="餐桌名:" />

            <EditText
                android:id="@+id/et_edit_circle_table_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/shape_gray_stroke" />
        </LinearLayout>

        <LinearLayout
            style="@style/pop_add_layout"
            android:gravity="center_vertical">

            <TextView
                style="@style/pop_add_text"
                android:text="餐桌宽度:" />

            <TextView
                android:id="@+id/tv_edit_circle_table_width"
                style="@style/pop_add_text"
                android:layout_weight="3"
                android:text="1" />

            <LinearLayout style="@style/pop_add_layout_right">

                <TextView
                    android:id="@+id/tv_edit_circle_table_width_jian"
                    style="@style/pop_text_jian" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue" />

                <TextView
                    android:id="@+id/tv_edit_circle_table_width_jia"
                    style="@style/pop_text_jia" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>