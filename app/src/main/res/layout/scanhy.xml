<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="450dp"
    android:background="@drawable/scan_carmar_bg"
    android:gravity="center"
    android:id="@+id/conntainne"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="请将二维码/条形码放入矩形框内，即可自动扫描"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="330dp"
        android:id="@+id/cc"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/ii"
            android:src="@drawable/scanline"/>

        <SurfaceView
            android:layout_width="400dp"
            android:layout_height="330dp"
            android:id="@+id/suu"
            android:background="@drawable/pick_bg" />
    </LinearLayout>

    <Button
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="手输会员号/手机号"
        android:background="@drawable/scan_button_bg"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>